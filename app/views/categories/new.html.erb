<h2>New Category</h2> 
<%= render 'shared/errors', obj: @category %>

<%= form_for @category do |f| %> 
	<!-- Check for errors -->

	<div class="form-group">
		<div class="row">
			<div class="col-xs-4">
				<%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
			</div>
		</div>
	</div>		
	
	<%= f.submit "Submit", class: 'btn btn-primary but' %>
	<%= link_to "Cancel", root_path %>
<% end %>	

