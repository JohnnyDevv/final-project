<%= render 'shared/errors', obj: order %>

<%= form_for(order) do |f| %>

  <center class="mx-auto">
    <div class="card" style="display: block;">
      <h4 class="card-header">Enter Your Payment Information</h4>
      <div class="card-block">
        <center>
          <div class="field form-group">
            <%= f.text_field :fname, autofocus: true, class: "form-control col-6", placeholder: 'First name' %>
          </div>

          <div class="field form-group">
            <%= f.text_field :lname, autofocus: true, class: "form-control col-6", placeholder: 'Last name' %>
          </div>

          <div class="field form-group">
            <%= f.text_area :address, autofocus: true, class: "form-control col-6", placeholder: 'Address' %>
          </div>

          <div class="field form-group">
            <%= f.email_field :email, autofocus: true, class: "form-control col-6", placeholder: 'Email' %>
          </div>

          <div class="field form-group">
            <%= f.select :pay_type, Order.pay_types.keys, {:include_blank => 'Payment method'}, class: 'form-control col-6' %>
          </div>

          <div class="field form-group">
            <%= f.text_field :card_no, autofocus: true, class: "form-control col-6", placeholder: 'Card number' %>
          </div>

          <div class="field form-group">
            <%= f.text_field :card_cvv, autofocus: true, class: "form-control col-6", placeholder: 'CVV' %>
          </div>

          <div class="field form-group">
            <%= f.label :expiry_date %>
            <%= f.date_select :expiry_month, :use_month_numbers => true, :discard_day => true, :discard_year => true %>
            <%= f.date_select :expiry_year, :start_year => Date.today.year, :end_year => (Date.today.year+10), :discard_day => true, :discard_month => true, prompt: true %>
              (month, year)
          </div>

          <div class="field">
            <%#= f.label :expiry_date %>
            <%#= f.date_select :expiry_date, :discard_day => true, :use_month_numbers => true, :start_year => Date.today.year, :end_year => (Date.today.year+10), :order => [:month, :year] %>
            
          </div>

          <div class="actions">
            <%= f.submit 'Place Order', class: "btn btn-primary btn-lg" %>
          </div>
        </center>
      </div>
    </div>
  </center>      
<% end %>
