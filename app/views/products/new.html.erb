<h2>Upload Item</h2>

<%#= render 'shared/errors', obj: @product %>

<div class="row">
	<div class="col-xs-12">
		<%= form_for @product, :html => {class: "form-horizontal", role: "form"} do |f| %>
			<% if @product.errors.any? %>
				<div id="error_explanation">
					<h2>
						<%= pluralize(@product.errors.count, 'error') %> prohibited this product from being saved:
					</h2>
					<ul>
						<%= @product.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>	
					</ul>
				</div>
			<% end %>
			
			<div class="form-group">
				<div class="col-sm-6">
					<%= f.text_field :title, class: 'form-control', placeholder: 'Title', autofocus: true %>
				</div>	
			</div>	

			<div class="form-group">
				<div class="col-sm-6">
					<%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Category'}, class: 'form-control' %>
				</div>
			</div>	

			<div class="form-group">
				<div class="col-sm-6">
					<%= f.text_area :description, class: 'form-control', placeholder: 'Description', autofocus: true %>
				</div>
			</div>	

			<div class="form-group">
				<div class="col-sm-4">
					<%= f.label :product_image %>
					<%= f.hidden_field :picture_cache %>
					<%= f.file_field :picture %>
				</div>
			</div>
			
			<%= f.submit "Upload photo", class: 'btn btn-success but' %>
			<%= link_to "Cancel", root_path, class: 'btn btn-default but' %>
		<% end %>	
	</div>
</div>	
