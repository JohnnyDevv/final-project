<h2>Edit Category</h2>
<%= render 'shared/errors', obj: @category %>

<%= form_for @category do |f| %>
	<div class="form-group">
		<div class="row">
			<div class="col-xs-4">
				<%= f.text_field :name, class: 'form-control' %>
			</div>
		</div>	
	</div>		
	<br>
	<%= f.submit "Submit", class: 'btn btn-primary but' %>
	<%= link_to "Cancel", category_path(@category) %>
<% end %>	

<h3 class="page-header">Images in <%= @category.name %></h3>
<div id="edit-images">
	<% if @products.exists? %>
		<% @products.each_slice(6) do |image| %>
			<div class="row">
				<% image.each do |image| %>
					<div class="col-md-2">
						<%= image_tag(image.picture.url, size: '200x200') %>
						<center><%= link_to 'Delete', product_path(image), class: 'delete', method: :delete, data: {confirm: 'Are you sure?'} %></center>
					</div>
				<% end %>	
			</div>
		<% end %>
	<% end %>		
</div>


